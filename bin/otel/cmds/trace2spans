#!/usr/bin/env bash
set -euo pipefail
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
BASE_DIR="$(cd "${SCRIPT_DIR}/.." && pwd)"

show_help() {
  cat <<'EOF'
Show trace spans as a table.

Usage:
  bin/otel/cmds/trace2spans <trace_id> [--match REGEX]

Output columns:
  span_id  parent_id  duration_ms  name  status  [queue_delay_ms] [event_loop_id]
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
  show_help
  exit 0
fi

exec "${BASE_DIR}/_python" "${BASE_DIR}/trace_tools.py" trace2spans "$@"
