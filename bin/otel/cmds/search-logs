#!/usr/bin/env bash
set -euo pipefail
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
BASE_DIR="$(cd "${SCRIPT_DIR}/.." && pwd)"

show_help() {
  cat <<'EOF'
Search logs backend by substring.

Usage:
  bin/otel/cmds/search-logs --contains TEXT [--service NAME] [--since 1h]
                             [--start ISO/epoch] [--end ISO/epoch] [--limit N] [--full]
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
  show_help
  exit 0
fi

exec "${BASE_DIR}/_python" "${BASE_DIR}/trace_tools.py" search-logs "$@"
